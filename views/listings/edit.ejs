<%layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2"><br><br>
            <h3>Edit your listings</h3>
            <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable" >Title</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Title required</div>
                </div>
            <div class="mb-3">    
                    <label for="description" class="form-lable" >Description</label>
                    <textarea type="text" name="listing[description]"  class="form-control" required><%=listing.description%></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Description required</div>
            </div>

            <div class="mb-3" >
                origninal listng image <br>
               <img src="<%=originalImageUrl%>" alt="lisitng image" style="height: 300px;">
             </div>

            <div class="mb-3">
                    <label for="image" class="form-lable">Upload New Image</label>
                    <input type="file" name="listing[image]"  class="form-control" >
            </div>  
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-lable">Price</label>
                    <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Price required</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-lable">Country</label>
                    <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Country required</div>
                </div>
            </div> 
            <div class="mb-3">
                <label for="location" class="form-lable">Location</label>
                <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Location required</div>
            </div>  
            <div class="mb-3">
                <label for="category" class="form-lable" required>Type of place</label>
                <select name="listing[category]">
                    <option value="<%=listing.category%>"><%=listing.category%></option>
                    <option value="room">Room</option>
                    <option value="iconicCity">Iconic Citie</option>
                    <option value="mountains">Mountain</option>
                    <option value="castle">Castle</option>
                    <option value="sea">Sea</option>
                    <option value="amaizingPool">Amaizing Pool</option>
                    <option value="camping">Camping</option>
                    <option value="farm">Farms</option>
                    <option value="arctic">Arctic</option>
                    <option value="domes">Dome</option>
                    <option value="boat">Boat</option>
                    <option value="other">other..</option>
                </select>
            </div>
            <br><br>  
                <button class="btn btn-dark save-btn">Save</button>
            </form>
        </div>
    </div>
</body>
