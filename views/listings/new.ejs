<%layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2"><br><br>
            <h3>Create your own List</h3>
            <form action="/listings" 
                 method="post" novalidate 
                 class="needs-validation" 
             enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Title required</div>
                </div>
            <div class="mb-3">    
                    <label for="description" class="form-lable">Description</label>
                    <textarea type="text" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Description required</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-lable">Upload Image </label>
                <input type="file" name="listing[image]" class="form-control">
            </div>  
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-lable">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Price required</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-lable">country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Country required</div>
                </div>
            </div> 
            <div class="mb-3">
                <label for="location" class="form-lable">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Location required</div>
            </div>  
          <div class="mb-3">
                <label for="category" class="form-lable" required>Type of place</label>
                <select name="listing[category]">
                    <option value="select">Select</option>
                    <option value="room">Room</option>
                    <option value="iconicCity">Iconic Citie</option>
                    <option value="mountains">Mountain</option>
                    <option value="castle">Castle</option>
                    <option value="sea">Sea</option>
                    <option value="amaizingPool">Amaizing Pool</option>
                    <option value="camping">Camping</option>
                    <option value="farm">Farms</option>
                    <option value="arctic">Arctic</option>
                    <option value="domes">Dome</option>
                    <option value="boat">Boat</option>
                    <option value="other">other..</option>
                </select>
            </div>
            <br><br>  
                <button class="btn btn-dark  add-btn">Add</button>
            </form>
        </div>
    </div>
</body>
